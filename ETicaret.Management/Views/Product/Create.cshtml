@model ETicaret.Shared.Dal.Concrete.Product
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form class=form-group method="post" enctype="multipart/form-data">
    <div class="col12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class=form-sample>
                    <div>
                        @Html.LabelFor(x=>x.Name)                      

                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Name)
                    </div>

                       <div class=form-group>
                        @Html.Label("Kategori")
                        @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>) ViewBag.cv , new {@class="form-control"})

                        </div>
                    <div class=form-group>


                        <label>Stok</label>
                        @*@Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })*@
                        <input type="number" name="Stock" class="form-control" required/>
                        <label class="d-none text-danger" id="lbl_Stock"></label>
                    </div>
                    <div class=form-group>

                        @Html.LabelFor(x=>x.Description)
                        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                        
                        @Html.ValidationMessageFor(x => x.Description,"", new { @class = "text-danger" })


                    </div>
                    <div class=form-group>
                        @Html.LabelFor(x=>x.Price)
                        @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Price,"", new { @class = "text-danger" })


                    </div>
                    <div class=form-group>

                        @Html.LabelFor(x=>x.Image)
                        <input type="file" name=file />

                    </div>
                    <button type="submit" class=btn-primary>Kaydet</button>

                </div>
            </div>
        </div>

    </div>
</form>
















