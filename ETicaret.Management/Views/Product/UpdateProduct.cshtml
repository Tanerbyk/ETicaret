@using ETicaret.Shared.Application.DTOs;
@model CategoriesWithProductDTO


@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<form  onsubmit="return submitForm(this)" asp-controller="Product" asp-action="UpdateProduct" class="form-group" method="post"  enctype="multipart/form-data" id="form2">
    <div class="col12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class=form-sample>
                    <div class="form-group">
                        <input type="hidden" name="Id" id="Id" />
                        <label>Ürünün Adı</label>
                        <input type="text" name="Name" class="form-control" required value="@Model.Name" />

                    </div>

                    <div class="form-group">
                        <label>Kategori Adı</label>
                        <!select class="form-select " name="CategoryID">
                            @foreach (var item in Model.Categories)
                            {
                            <!option @(Model.CategoryID==item.Id?"selected":"") class="dropdown-item" itemid="CategoryID" value="@item.Id">@item.Name</!option>
                             <option class="dropdown-item" itemid="CategoryID" value="@item.Id">@item.Name</option>
                            }
                        </!select>

                    </div>


                    <div class=form-group>

                        <label>Stok</label>
                        <input type="number" name="Stock" id="Stock" class="form-control" required value="@Model.Stock" />

                    </div>
                    <div class=form-group>

                        <label>İndirim oranı</label>
                        <input type="number" name="Discount" id="Discount" class="form-control" required value="@Model.Discount"/>

                    </div>
                    <div class=form-group>

                        <label>Açıklama</label>
                        <textarea type="text" name="Description" id="Description" class="form-control" required>
                          @Model.Description
                        </textarea>

                    </div>
                    <div class=form-group>
                        <label>Fiyat</label>
                        <input type="number" name="Price" id="Price" class="form-control" required value="@Model.Price" />
                    </div>

                     <label>Ürünün Görseli</label>
                    <div class="custom-file">

                        <input type="file" class="custom-file-input" name="fileImage" id="Path" required  value="@Model.fileImage"  />
                        <label class="custom-file-label" for="customFile">Choose file</label>

                    </div><br /><br />

                    <button class="btn-primary" type="submit" id="btn">Kaydet</button>
                </div>




            </div>
        </div>

    </div>

</form>


 
<script>

            function submitForm(t) {
               var formData = new FormData(document.getElementById("form2"));
               $.ajax({
                   url: "",
               data: formData,
               type: "POST",
               processData: false,
               contentType: false,
               async: true,
               beforeSend: function(item) {},
               success: function(item) {
      if(item=="success"){
                      Swal.fire({
      title: 'Başarılı?',
      text: "Ürün Güncelleme İşlemi Başarıyla Tamamlandı.Devam Etmek için Tamam'a Basın.",
      icon: item,
      confirmButtonColor: '#3085d6',
      confirmButtonText: 'Tamam'
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.replace("/Product/ListProduct");
      }
    })
      }
    
               },
               error: function(jqXHR, textStatus, error) {
                   Swal.fire({
      icon: 'error',
      title: 'Hata...',
      text: 'Bir Hata Oluştu!'

    })
               },
               });
                      return false;
                }

</script>









