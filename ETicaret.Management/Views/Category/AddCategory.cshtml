@model ETicaret.Shared.Dal.Concrete.Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form onsubmit="return submitForm(this)" class=form-group method="post" asp-controller="Category" asp-action="AddCategory" id="form1">

    <div class="form-group">
        <label>Kategori</label>
        <input name="Name" class="form-control" placeholder="Kategori Adı  Giriniz" required="">
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>


</form>




<script>

            function submitForm(t) {
               var formData = new FormData(document.getElementById("form1"));
               $.ajax({
                   url: "",
               data: formData,
               type: "POST",
               processData: false,
               contentType: false,
               async: true,
               beforeSend: function(item) {},
               success: function(item) {
      if(item=="success"){
                      Swal.fire({
      title: 'Başarılı?',
      text: "Kategori Ekleme İşlemi Başarıyla Tamamlandı.Devam Etmek için Tamam'a Basın.",
      icon: item,
      confirmButtonColor: '#3085d6',
      confirmButtonText: 'Tamam'
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.replace("/Category/ListCategory");
      }
    })
      }
      else{
      Swal.fire({
      icon: 'error',
      title: 'HATA...',
      text: 'Böyle Bir Kategori Zaten Mevcut'


    })
      }
               },
               error: function(jqXHR, textStatus, error) {
                   Swal.fire({
      icon: 'error',
      title: 'Hata...',
      text: 'Bir Hata Oluştu!'

    })
               },
               });
                      return false;
                }

</script>






