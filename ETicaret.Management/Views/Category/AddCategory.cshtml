@model ETicaret.Shared.Application.Features.Category.Commands.CreateCategoryCommand
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


                <div class="card-body">
    <form id="form1" onsubmit="return submitForm(this)" asp-formhelper="true" asp-controller="Category" asp-action="AddCategory" asp-dataType="FormData"
          enctype="multipart/form-data">


                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" type="text" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                     
                        <hr />
                        <div class="form-group text-right">
                            <button class="btn btn-primary" type="submit">Save</button>
                        </div>
                    </form>
                </div>
<script>

    function submitForm(t) {
        var formData = new FormData(document.getElementById("form1"));
        $.ajax({
            url: "",
            data: formData,
            type: "POST",
            processData: false,
            contentType: false,
            async: true,
            beforeSend: function (item) { },
            success: function (item) {
                if (item == true) {
                    Swal.fire({
                        title: 'Başarılı?',
                        text: "Kategori Ekleme İşlemi Başarıyla Tamamlandı.Devam Etmek için Tamam'a Basın.",
                        icon: item,
                        confirmButtonColor: '#3085d6',
                        confirmButtonText: 'Tamam'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.replace("/Category/ListCategory");
                        }
                    })
                }
               
            },
            error: function (jqXHR, textStatus, error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Hata...',
                    text: 'Bir Hata Oluştu!'

                })
            },
        });
        return false;
    }

</script>

